<?xml version="1.0" encoding="UTF-8"?>
<config>
    <logger>
        <file value="/var/log/xparser.log" />
        <stream value="STDOUT" />
        <start_msg value="Program started." />
        <finish_msg value="Program finished." />
        <show_time value="true" />
    </logger>
	<parser>
        <root_dir value="/tmp/to_replace/" />
	</parser>
    <replacer>
        <stream_count value="4" />
        <thread_start_waiting_ms value="5" />
        <pair>
            <from value="@value1@" />
            <to value="data1" />
        </pair>
        <pair>
            <from value="@value2@" />
            <to value="data2" />
        </pair>
        <pair>
            <from value="@value3@" />
            <to value="data3" />
        </pair>
    </replacer>
</config>
